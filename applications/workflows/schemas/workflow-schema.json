{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "OptimaCX Workflow Schema",
  "description": "Schema de validación para workflows de OptimaCX",
  "type": "object",
  "required": ["name", "description", "version", "category", "tags", "nodes"],
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^[A-Za-z0-9\\s\\-_]+$",
      "minLength": 5,
      "maxLength": 100,
      "description": "Nombre descriptivo del workflow"
    },
    "description": {
      "type": "string",
      "minLength": 20,
      "maxLength": 500,
      "description": "Descripción detallada del propósito del workflow"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Versión semántica del workflow"
    },
    "category": {
      "type": "string",
      "enum": ["administracion", "campañas", "encuestas", "leads", "reclamos", "template"],
      "description": "Categoría del workflow"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "admin", "super-admin", "tenant", "management",
          "campaign", "email", "whatsapp", "marketing", "automation",
          "survey", "ventas", "postventa", "webhook", "srp", "nps",
          "lead", "prospecting", "scoring", "assignment", "ai", 
          "complaint", "rag", "knowledge", "embedding", "orchestrator",
          "template", "base", "reusable"
        ]
      },
      "minItems": 2,
      "maxItems": 8,
      "uniqueItems": true,
      "description": "Tags para categorización y búsqueda"
    },
    "metadata": {
      "type": "object",
      "required": ["lastUpdated", "apiVersion", "author"],
      "properties": {
        "lastUpdated": {
          "type": "string",
          "format": "date-time",
          "description": "Fecha de última actualización"
        },
        "apiVersion": {
          "type": "string",
          "pattern": "^n8n/\\d+\\.\\d+$",
          "description": "Versión de API de n8n"
        },
        "author": {
          "type": "string",
          "description": "Autor del workflow"
        },
        "support": {
          "type": "object",
          "properties": {
            "email": {
              "type": "string",
              "format": "email"
            },
            "docs": {
              "type": "string",
              "format": "uri"
            }
          }
        },
        "dependencies": {
          "type": "array",
          "items": {
            "type": "string",
            "description": "Workflows dependientes"
          },
          "description": "Lista de workflows de los que depende"
        },
        "expectedInput": {
          "type": "object",
          "description": "Esquema de entrada esperada"
        },
        "expectedOutput": {
          "type": "object", 
          "description": "Esquema de salida esperada"
        },
        "configurable": {
          "type": "object",
          "description": "Parámetros configurables para templates"
        }
      }
    },
    "nodes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "name", "type", "typeVersion", "position"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9\\-]+$",
            "description": "ID único del nodo"
          },
          "name": {
            "type": "string",
            "minLength": 3,
            "maxLength": 50,
            "description": "Nombre descriptivo del nodo"
          },
          "type": {
            "type": "string",
            "pattern": "^n8n-nodes-base\\.[a-zA-Z]+$",
            "description": "Tipo de nodo n8n"
          },
          "typeVersion": {
            "type": "number",
            "minimum": 1,
            "maximum": 3,
            "description": "Versión del tipo de nodo"
          },
          "position": {
            "type": "array",
            "items": {
              "type": "number"
            },
            "minItems": 2,
            "maxItems": 2,
            "description": "Posición [x, y] del nodo en el canvas"
          },
          "parameters": {
            "type": "object",
            "description": "Parámetros específicos del nodo"
          }
        }
      }
    },
    "connections": {
      "type": "object",
      "description": "Conexiones entre nodos"
    },
    "settings": {
      "type": "object",
      "properties": {
        "executionOrder": {
          "type": "string",
          "enum": ["v0", "v1"],
          "default": "v1"
        }
      }
    }
  },
  "additionalProperties": true
}
