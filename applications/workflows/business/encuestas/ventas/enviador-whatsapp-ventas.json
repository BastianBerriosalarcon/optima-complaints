{
  "name": "Sales Survey WhatsApp Sender",
  "description": "Envío individual de encuestas de VENTAS por WhatsApp. Principio SRP: Una sola responsabilidad - envío individual WhatsApp ventas.",
  "tags": ["sales", "survey", "whatsapp", "sender", "ventas", "individual", "srp"],
  "nodes": [
    {
      "parameters": {
        "httpMethod": "POST",
        "path": "webhook/sales-survey/whatsapp-sender",
        "responseMode": "responseNode",
        "options": {}
      },
      "id": "webhook-trigger-ventas",
      "name": "Trigger Enviador WhatsApp Ventas",
      "type": "n8n-nodes-base.webhook",
      "typeVersion": 2,
      "position": [240, 300],
      "webhookId": "sales-survey-whatsapp-sender"
    },
    {
      "parameters": {
        "batchSize": 10,
        "options": {}
      },
      "id": "batch-sales-clients",
      "name": "Agrupar Clientes Ventas",
      "type": "n8n-nodes-base.splitInBatches",
      "typeVersion": 3,
      "position": [460, 300]
    },
    {
      "parameters": {
      },
      "id": "prepare-sales-whatsapp-message",
      "name": "Preparar Mensaje WhatsApp Ventas",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [680, 300]
    },
    {
      "parameters": {
        "method": "POST",
        "url": "=https:
        "authentication": "genericCredentialType",
        "genericAuthType": "httpHeaderAuth",
        "headers": {
          "parameters": [
            {
              "name": "Authorization",
              "value": "=Bearer {{ $json.access_token }}"
            },
            {
              "name": "Content-Type",
              "value": "application/json"
            }
          ]
        },
        "body": {
          "parameters": [
            {
              "name": "messaging_product",
              "value": "whatsapp"
            },
            {
              "name": "to",
              "value": "={{ $json.to_phone }}"
            },
            {
              "name": "type",
              "value": "text"
            },
            {
              "name": "text",
              "value": "={{ {\"body\": $json.message_text} }}"
            }
          ]
        }
      },
      "id": "send-sales-whatsapp",
      "name": "Enviar WhatsApp Ventas",
      "type": "n8n-nodes-base.httpRequestV3",
      "typeVersion": 4,
      "position": [900, 300]
    },
    {
      "parameters": {
        "method": "PATCH",
        "url": "={{ $vars.SUPABASE_URL }}/rest/v1/encuestas_ventas",
        "authentication": "genericCredentialType",
        "genericAuthType": "httpHeaderAuth",
        "headers": {
          "parameters": [
            {
              "name": "apikey",
              "value": "={{ $vars.SUPABASE_ANON_KEY }}"
            },
            {
              "name": "Authorization",
              "value": "Bearer {{ $vars.SUPABASE_SERVICE_KEY }}"
            },
            {
              "name": "Content-Type",
              "value": "application/json"
            }
          ]
        },
        "qs": {
          "parameters": [
            {
              "name": "id",
              "value": "eq.{{ $('Preparar Mensaje WhatsApp Ventas').first().json.survey_metadata.survey_id }}"
            }
          ]
        },
        "body": {
          "parameters": [
            {
              "name": "estado",
              "value": "enviado_whatsapp"
            },
            {
              "name": "fecha_ultimo_contacto",
              "value": "={{ new Date().toISOString() }}"
            },
            {
              "name": "intentos_contacto",
              "value": 1
            },
            {
              "name": "whatsapp_message_id",
              "value": "={{ $('Enviar WhatsApp Ventas').first().json.messages?.[0]?.id || 'unknown' }}"
            }
          ]
        }
      },
      "id": "update-sales-survey-status",
      "name": "Actualizar Estado Encuesta Ventas",
      "type": "n8n-nodes-base.httpRequestV3",
      "typeVersion": 4,
      "position": [1120, 300]
    },
    {
      "parameters": {
      },
      "id": "generate-sales-delivery-result",
      "name": "Generar Resultado Envío Ventas",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [1340, 300]
    },
    {
      "parameters": {
        "conditions": {
          "options": {
            "caseSensitive": true,
            "leftValue": "",
            "typeValidation": "strict"
          },
          "conditions": [
            {
              "id": "success-condition",
              "leftValue": "={{ $json.status }}",
              "rightValue": "success",
              "operator": {
                "type": "string",
                "operation": "equals"
              }
            }
          ],
          "combinator": "and"
        },
        "looseTypeValidation": true
      },
      "id": "check-delivery-success",
      "name": "¿Envío Exitoso?",
      "type": "n8n-nodes-base.if",
      "typeVersion": 2,
      "position": [1560, 300]
    },
    {
      "parameters": {
        "respondWith": "json",
        "responseBody": "={\n  \"status\": \"success\",\n  \"message\": \"Encuesta de VENTAS enviada exitosamente por WhatsApp\",\n  \"survey_type\": \"VENTAS\",\n  \"department\": \"VENTAS\",\n  \"client_info\": {\n    \"nombre\": \"{{ $json.client_data.nombre }}\",\n    \"telefono\": \"{{ $json.client_data.telefono }}\",\n    \"vehiculo\": \"{{ $json.client_data.vehiculo }}\"\n  },\n  \"delivery_info\": {\n    \"whatsapp_message_id\": \"{{ $json.delivery_info.whatsapp_message_id }}\",\n    \"sent_at\": \"{{ $json.delivery_info.sent_at }}\"\n  },\n  \"next_steps\": {\n    \"wait_period\": \"6 horas\",\n    \"fallback_action\": \"Asignación automática a Contact Center si no responde\"\n  }\n}"
      },
      "id": "success-response-ventas",
      "name": "Respuesta Éxito Ventas",
      "type": "n8n-nodes-base.respondToWebhook",
      "typeVersion": 2,
      "position": [1780, 200]
    },
    {
      "parameters": {
        "respondWith": "json",
        "responseBody": "={\n  \"status\": \"error\",\n  \"message\": \"Error al enviar encuesta de VENTAS por WhatsApp\",\n  \"survey_type\": \"VENTAS\",\n  \"department\": \"VENTAS\",\n  \"client_info\": {\n    \"nombre\": \"{{ $json.client_data.nombre }}\",\n    \"telefono\": \"{{ $json.client_data.telefono }}\",\n    \"vehiculo\": \"{{ $json.client_data.vehiculo }}\"\n  },\n  \"error_details\": {{ JSON.stringify($json.delivery_info.error_details) }},\n  \"fallback_action\": \"Cliente será asignado directamente a Contact Center\",\n  \"timestamp\": \"{{ new Date().toISOString() }}\"\n}"
      },
      "id": "error-response-ventas",
      "name": "Respuesta Error Ventas",
      "type": "n8n-nodes-base.respondToWebhook",
      "typeVersion": 2,
      "position": [1780, 400]
    }
  ],
