{
  "name": "Leads - Manejador de Respuestas de Prospección",
  "description": "Procesa las respuestas de los clientes a las campañas de prospección por WhatsApp y crea leads si la respuesta es positiva.",
  "tags": ["leads", "prospeccion", "respuesta", "ia", "srp"],
  "nodes": [
    {
      "parameters": {
        "workflowId": "manejador-respuestas-prospeccion"
      },
      "id": "workflow-trigger",
      "name": "Trigger del Workflow",
      "type": "n8n-nodes-base.executeWorkflowTrigger",
      "typeVersion": 2,
      "position": [240, 300]
    },
    {
      "parameters": {
        "jsCode": "const responseData = $input.first().json;\nconst messageBody = responseData.message_body.toLowerCase().trim();\n\n
      },
      "id": "analyze-response",
      "name": "1. Analizar Respuesta",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [460, 300]
    },
    {
      "parameters": {
        "conditions": {
          "boolean": [
            {
              "value1": "={{ $json.is_positive_response }}",
              "operation": "equal",
              "value2": true
            }
          ]
        }
      },
      "id": "check-if-positive",
      "name": "¿Respuesta Positiva?",
      "type": "n8n-nodes-base.if",
      "typeVersion": 2,
      "position": [680, 300]
    },
    {
      "parameters": {
        "jsCode": "const responseData = $input.first().json;\n\nconst newLead = {\n  concesionario_id: responseData.tenant_id,\n  telefono_cliente: responseData.from_phone,\n  nombre_cliente: responseData.contact_name || 'Cliente de Prospección',\n  estado: 'nuevo',\n  fuente_lead: 'prospeccion_whatsapp',\n  mensaje_original: responseData.message_body,\n  nivel_interes: 'medio', 
      },
      "id": "prepare-new-lead",
      "name": "2a. Preparar Nuevo Lead",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [900, 200]
    },
    {
      "parameters": {
        "operation": "create",
        "resource": "execution",
        "workflowId": "asignacion-asesores",
        "data": "={{ JSON.stringify($json) }}"
      },
      "id": "trigger-assignment-workflow",
      "name": "3a. Disparar Asignación de Asesor",
      "type": "n8n-nodes-base.n8n",
      "typeVersion": 2,
      "position": [1120, 200]
    },
    {
      "parameters": {
        "operation": "insert",
        "schema": "public",
        "table": "prospeccion_opt_out",
        "columns": "tenant_id, telefono_cliente, razon",
        "additionalFields": {
          "values": "={{ [$json.tenant_id, $json.from_phone, 'Respuesta negativa a campaña'] }}"
        }
      },
      "id": "log-negative-response",
      "name": "2b. Registrar Respuesta Negativa",
      "type": "n8n-nodes-base.postgres",
      "typeVersion": 2,
      "position": [900, 400]
    }
  ],
  "connections": {
    "Trigger del Workflow": {
      "main": [
        [
          {
            "node": "1. Analizar Respuesta",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "1. Analizar Respuesta": {
      "main": [
        [
          {
            "node": "¿Respuesta Positiva?",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "¿Respuesta Positiva?": {
      "main": [
        [
          {
            "node": "2a. Preparar Nuevo Lead",
            "type": "main",
            "index": 0
          }
        ],
        [
          {
            "node": "2b. Registrar Respuesta Negativa",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "2a. Preparar Nuevo Lead": {
      "main": [
        [
          {
            "node": "3a. Disparar Asignación de Asesor",
            "type": "main",
            "index": 0
          }
        ]
      ]
    }
  },
  "settings": { "saveExecutionProgress": true }
}