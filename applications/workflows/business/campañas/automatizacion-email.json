{
  "name": "Automatización Email Marketing",
  "nodes": [
    {
      "parameters": {
        "method": "POST",
        "url": "={{ $vars.WEBHOOK_URL }}/campañas/email",
        "authentication": "genericCredentialType",
        "genericAuthType": "httpHeaderAuth",
        "options": {}
      },
      "id": "webhook-campañas-email",
      "name": "Webhook Campañas Email",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.1,
      "position": [240, 300],
      "webhookId": "campaign-email-webhook"
    },
    {
      "parameters": {
        "conditions": {
          "options": {
            "caseSensitive": true,
            "leftValue": "",
            "typeValidation": "strict"
          },
          "conditions": [
            {
              "id": "tenant-validation",
              "leftValue": "={{ $json.concesionario_id }}",
              "rightValue": "",
              "operator": {
                "type": "string",
                "operation": "exists",
                "singleValue": true
              }
            }
          ],
          "combinator": "and"
        },
        "options": {}
      },
      "id": "validar-tenant",
      "name": "Validar Tenant",
      "type": "n8n-nodes-base.if",
      "typeVersion": 2,
      "position": [460, 300]
    },
    {
      "parameters": {
        "operation": "select",
        "schema": {
          "value": "public"
        },
        "table": {
          "value": "clientes"
        },
        "where": {
          "values": [
            {
              "column": "concesionario_id",
              "condition": "equal",
              "value": "={{ $json.concesionario_id }}"
            },
            {
              "column": "activo",
              "condition": "equal",
              "value": true
            }
          ]
        },
        "options": {}
      },
      "id": "obtener-clientes",
      "name": "Obtener Clientes",
      "type": "n8n-nodes-base.supabase",
      "typeVersion": 1,
      "position": [680, 240],
      "credentials": {
        "supabaseApi": {
          "id": "supabase-credentials",
          "name": "Supabase OptimaCX"
        }
      }
    },
    {
      "parameters": {
        "assignments": {
          "assignments": [
            {
              "id": "email-data",
              "name": "email_data",
              "value": "={{ {\n  destinatario: $json.email,\n  nombre: $json.nombre_completo,\n  asunto: $('webhook-campañas-email').first().$json.asunto,\n  plantilla: $('webhook-campañas-email').first().$json.plantilla,\n  variables: {\n    nombre_cliente: $json.nombre_completo,\n    concesionario: $json.concesionario_nombre,\n    telefono: $json.telefono,\n    contenido_personalizado: $('webhook-campañas-email').first().$json.contenido || ''\n  }\n} }}",
              "type": "object"
            }
          ]
        },
        "options": {}
      },
      "id": "preparar-email",
      "name": "Preparar Email",
      "type": "n8n-nodes-base.set",
      "typeVersion": 3.3,
      "position": [900, 240]
    },
    {
      "parameters": {
        "sendTo": "={{ $json.email_data.destinatario }}",
        "subject": "={{ $json.email_data.asunto }}",
        "emailType": "html",
        "message": "=<!DOCTYPE html>\n<html>\n<head>\n    <meta charset=\"utf-8\">\n    <style>\n        body { font-family: Arial, sans-serif; line-height: 1.6; color: #333; }\n        .container { max-width: 600px; margin: 0 auto; padding: 20px; }\n        .header { background-color: #f8f9fa; padding: 20px; text-align: center; }\n        .content { padding: 20px; }\n        .footer { background-color: #f8f9fa; padding: 15px; font-size: 12px; }\n    </style>\n</head>\n<body>\n    <div class=\"container\">\n        <div class=\"header\">\n            <h2>{{ $json.email_data.variables.concesionario }}</h2>\n        </div>\n        <div class=\"content\">\n            <p>Estimado/a {{ $json.email_data.variables.nombre_cliente }},</p>\n            {{ $json.email_data.variables.contenido_personalizado }}\n            <p>Saludos cordiales,<br>Equipo {{ $json.email_data.variables.concesionario }}</p>\n        </div>\n        <div class=\"footer\">\n            <p>Este es un mensaje automático. Para consultas, contáctanos al {{ $json.email_data.variables.telefono }}</p>\n        </div>\n    </div>\n</body>\n</html>",
        "options": {}
      },
      "id": "enviar-email",
      "name": "Enviar Email",
      "type": "n8n-nodes-base.emailSend",
      "typeVersion": 2.1,
      "position": [1120, 240],
      "credentials": {
        "smtp": {
          "id": "smtp-tenant",
          "name": "SMTP Tenant"
        }
      }
    },
    {
      "parameters": {
        "operation": "insert",
        "schema": {
          "value": "public"
        },
        "table": {
          "value": "log_campañas"
        },
        "columns": {
          "mappingMode": "defineBelow",
          "value": {
            "concesionario_id": "={{ $('webhook-campañas-email').first().$json.concesionario_id }}",
            "tipo_campaña": "email",
            "destinatario": "={{ $json.email_data.destinatario }}",
            "asunto": "={{ $json.email_data.asunto }}",
            "estado": "enviado",
            "fecha_envio": "={{ new Date().toISOString() }}",
            "metadata": "={{ JSON.stringify($json.email_data) }}"
          }
        },
        "options": {}
      },
      "id": "registrar-envio",
      "name": "Registrar Envío",
      "type": "n8n-nodes-base.supabase",
      "typeVersion": 1,
      "position": [1340, 240],
      "credentials": {
        "supabaseApi": {
          "id": "supabase-credentials",
          "name": "Supabase OptimaCX"
        }
      }
    },
    {
      "parameters": {
        "respondWith": "json",
        "responseBody": "={{ {\n  success: true,\n  mensaje: 'Campaña de email ejecutada exitosamente',\n  total_enviados: $('obtener-clientes').all().length,\n  concesionario_id: $('webhook-campañas-email').first().$json.concesionario_id\n} }}"
      },
      "id": "respuesta-exitosa",
      "name": "Respuesta Exitosa",
      "type": "n8n-nodes-base.respondToWebhook",
      "typeVersion": 1.1,
      "position": [1560, 240]
    },
    {
      "parameters": {
        "respondWith": "json",
        "responseBody": "={{ {\n  success: false,\n  error: 'Tenant ID requerido',\n  mensaje: 'El campo concesionario_id es obligatorio para ejecutar campañas'\n} }}",
        "options": {
          "responseCode": 400
        }
      },
      "id": "error-tenant",
      "name": "Error Tenant",
      "type": "n8n-nodes-base.respondToWebhook",
      "typeVersion": 1.1,
      "position": [680, 400]
    }
  ],
  "pinData": {},
