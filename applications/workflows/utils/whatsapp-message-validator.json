{
  "name": "WhatsApp Message Validator",
  "description": "Valida y normaliza mensajes de WhatsApp Business API webhook",
  "tags": ["validation", "whatsapp", "srp"],
  "nodes": [
    {
      "parameters": {
        "workflowId": "{{ $json.workflowId }}"
      },
      "id": "workflow-trigger",
      "name": "Trigger del Workflow",
      "type": "n8n-nodes-base.executeWorkflowTrigger",
      "typeVersion": 2,
      "position": [200, 300]
    },
    {
      "parameters": {
        "jsCode": "
      },
      "id": "validate-whatsapp-message",
      "name": "Validar Mensaje WhatsApp",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [400, 300]
    },
    {
      "parameters": {
        "conditions": {
          "string": [
            {
              "value1": "={{ $json.validation.status }}",
              "operation": "equal",
              "value2": "valid"
            }
          ]
        }
      },
      "id": "check-validation-status",
      "name": "¿Validación Exitosa?",
      "type": "n8n-nodes-base.if",
      "typeVersion": 2,
      "position": [600, 300]
    },
    {
      "parameters": {
        "jsCode": "
      },
      "id": "prepare-for-tenant-lookup",
      "name": "Preparar para Tenant Lookup",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [800, 200]
    },
    {
      "parameters": {
        "jsCode": "
      },
      "id": "handle-validation-error",
      "name": "Manejar Error de Validación",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [800, 400]
    },
    {
      "parameters": {
        "respondWith": "json",
        "responseBody": "={\n  \"status\": \"success\",\n  \"message\": \"WhatsApp message validated successfully\",\n  \"data\": {\n    \"message_id\": \"{{ $json.message.id }}\",\n    \"from\": \"{{ $json.contact.phone }}\",\n    \"tenant_phone_id\": \"{{ $json.business_phone_number_id }}\",\n    \"validation_status\": \"{{ $json.validation.status }}\"\n  },\n  \"timestamp\": \"{{ $json.validation.validated_at }}\"\n}"
      },
      "id": "success-response",
      "name": "Respuesta Exitosa",
      "type": "n8n-nodes-base.respondToWebhook",
      "typeVersion": 2,
      "position": [1000, 200]
    },
    {
      "parameters": {
        "respondWith": "json",
        "responseBody": "={\n  \"status\": \"error\",\n  \"message\": \"WhatsApp message validation failed\",\n  \"error_details\": \"{{ $json.validation.error_message }}\",\n  \"timestamp\": \"{{ $json.validation.failed_at }}\"\n}",
        "options": {
          "responseCode": 400
        }
      },
      "id": "error-response",
      "name": "Respuesta de Error",
      "type": "n8n-nodes-base.respondToWebhook",
      "typeVersion": 2,
      "position": [1000, 400]
    }
  ],
  "connections": {
    "Trigger del Workflow": {
      "main": [
        [
          {
            "node": "Validar Mensaje WhatsApp",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Validar Mensaje WhatsApp": {
      "main": [
        [
          {
            "node": "¿Validación Exitosa?",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "¿Validación Exitosa?": {
      "main": [
        [
          {
            "node": "Preparar para Tenant Lookup",
            "type": "main",
            "index": 0
          }
        ],
        [
          {
            "node": "Manejar Error de Validación",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Preparar para Tenant Lookup": {
      "main": [
        [
          {
            "node": "Respuesta Exitosa",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Manejar Error de Validación": {
      "main": [
        [
          {
            "node": "Respuesta de Error",
            "type": "main",
            "index": 0
          }
        ]
      ]
    }
  },
  "settings": {
    "saveExecutionProgress": true,
    "saveManualExecutions": true,
    "callerPolicy": "workflowsFromSameOwner"
  }
}
