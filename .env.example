# OptimaCx GCP - n8n Configuration Template
# Copiar a .env y configurar valores reales

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DATABASE_URL=postgresql://user:password@host:5432/database
DB_POSTGRESDB_HOST=172.21.0.3
DB_POSTGRESDB_PORT=5432
DB_POSTGRESDB_DATABASE=n8n_optima_cx
DB_POSTGRESDB_USER=n8n_user
DB_POSTGRESDB_PASSWORD=your_password

# ===========================================
# N8N CONFIGURATION
# ===========================================
N8N_EDITOR_BASE_URL=https://your-n8n-instance.run.app
N8N_WEBHOOK_URL=https://your-n8n-instance.run.app
N8N_PROTOCOL=https
N8N_HOST=your-n8n-instance.run.app
N8N_PORT=443

# ===========================================
# GOOGLE CLOUD CONFIGURATION
# ===========================================
GOOGLE_APPLICATION_CREDENTIALS=/app/service-account.json
GCP_PROJECT_ID=your-project-id
GCP_REGION=southamerica-west1
GCP_ZONE=southamerica-west1-a

# ===========================================
# AI/ML CONFIGURATION
# ===========================================
GEMINI_API_KEY=your_gemini_api_key
VERTEX_AI_PROJECT=your-project-id
VERTEX_AI_LOCATION=southamerica-west1
EMBEDDING_MODEL=gemini-embedding-001
LLM_MODEL=gemini-2.5-pro

# ===========================================
# OPTIMACX SPECIFIC
# ===========================================
OPTIMACX_MULTITENANT=true
OPTIMACX_DEFAULT_TENANT=demo
OPTIMACX_RAG_ENABLED=true
OPTIMACX_PGVECTOR_ENABLED=true

# ===========================================
# SMTP CONFIGURATION
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@optimacx.com

# ===========================================
# REDIS CONFIGURATION (if used)
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# ===========================================
# MONITORING & LOGGING
# ===========================================
LOG_LEVEL=info
MONITORING_ENABLED=true
METRICS_ENABLED=true
TRACE_ENABLED=true

# ===========================================
# SECURITY
# ===========================================
ENCRYPTION_KEY=your_encryption_key_32_chars
JWT_SECRET=your_jwt_secret
CORS_ORIGIN=https://your-frontend-domain.com

# ===========================================
# BACKUP CONFIGURATION
# ===========================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_BUCKET=your-backup-bucket